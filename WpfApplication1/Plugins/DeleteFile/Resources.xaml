<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    x:Class="FolderWatcher.Plugins.DeleteFile.Resources"
                    xmlns:deleteFile="clr-namespace:FolderWatcher.Plugins.DeleteFile">
    <DataTemplate DataType="{x:Type deleteFile:DeleteFilePluginPart}">
        <StackPanel Orientation="Horizontal">
            <Button Command="{Binding Delete}" CommandParameter="{Binding File}">Delete</Button>
            <Button Command="{Binding DelayedDelete}" CommandParameter="{Binding File}">Delete in 10 minutes</Button>
        </StackPanel>

    </DataTemplate>
</ResourceDictionary>